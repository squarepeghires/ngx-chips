{
  "name": "ngx-chips",
  "version": "2.0.0-beta.0",
  "description": "Tag Input component for Angular",
  "scripts": {
    "release": "npm run build && npm publish dist",
    "postrelease": "rm -rf dist",
    "build": "ng-packagr -p package.json && mkdirp ./dist/dist && ncp ./modules/core/styles ./dist/core/styles && ncp ./dist/bundles/ngx-chips.umd.js ./dist/dist/ngx-chips.bundle.js",
    "server": "ng serve --port 3010",
    "start": "npm run server",
    "test": "ng test --browsers=ChromeHeadless --watch=false",
    "codecov": "ng test --code-coverage --browsers=ChromeHeadless --watch=false"
  },
  "author": {
    "name": "Giancarlo Buomprisco",
    "email": "giancarlopsk@gmail.com"
  },
  "contributors": [],
  "license": "MIT",
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular/animations": "^8.0.0",
    "@angular/cli": "^8.0.0",
    "@angular/common": "^8.0.0",
    "@angular/compiler": "^8.0.0",
    "@angular/compiler-cli": "^8.0.0",
    "@angular/core": "^8.0.0",
    "@angular/forms": "^8.0.0",
    "@angular/language-service": "~8.0.0",
    "@angular/platform-browser": "^8.0.0",
    "@angular/platform-browser-dynamic": "^8.0.0",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "ng-packagr": "^5.2.0",
    "protractor": "~5.4.0",
    "rxjs": "~6.4.0",
    "tslint": "^5.17.0",
    "typescript": "3.4.5",
    "zone.js": "~0.9.1"
  },
  "dependencies": {
    "ng2-material-dropdown": "0.10.1"
  },
  "peerDependencies": {
    "@angular/animations": "^8.0.0",
    "@angular/common": "^8.0.0",
    "@angular/core": "^8.0.0",
    "@angular/forms": "^8.0.0",
    "rxjs": "~6.4.0"
  },
  "keywords": [
    "angular tag input",
    "tag input component",
    "material tag input",
    "angular chips component",
    "material chips"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Gbuomprisco/ngx-chips"
  },
  "bugs": {
    "url": "https://github.com/Gbuomprisco/ngx-chips/issues"
  },
  "homepage": "https://github.com/Gbuomprisco/ngx-chips",
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "ngPackage": {
    "$schema": "./node_modules/ng-packagr/ng-package.schema.json",
    "lib": {
      "entryFile": "modules/index.ts",
      "externals": {
        "ng2-material-dropdown": "ng2-material-dropdown"
      }
    },
    "whitelistedNonPeerDependencies": [
      "ng2-material-dropdown"
    ]
  }
}
